{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "target": "es2016",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "@preset/core/globals"]
  },
  "include": [
    "./*.ts",
    "./src/**/*.ts"
  ],
  "exclude": ["templates", "node_modules"]
}
